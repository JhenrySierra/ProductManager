<!DOCTYPE html>
<html>

<head>
    <title>Product List</title>
</head>

<body>
    <h2>Welcome, {{username}} ({{role}})</h2>

    <a href="/auth/logout">
        <button>Logout</button>
    </a>

    <h3>Product List</h3>
<ul>
    {{#each payload.payload}}
    {{#each this}}
    <li>
        {{title}}<br>
        {{description}}<br>
        {{price}}<br>
        Stock: {{stock}}<br>
        <button onclick="addToCart('{{_id}}')">Add to Cart</button>
    </li>
    {{/each }}
    {{/each}}
</ul>


    <!-- Pagination links -->
    {{#if payload.hasNextPage}}
    <a href="{{payload.nextLink}}">Next</a>
    {{/if}}

    {{#if payload.hasPrevPage}}
    <a href="{{payload.prevLink}}">Previous</a>
    {{/if}}

    <script>
        function addToCart(productId) {
            console.log('Adding product to cart:', productId);
        }

    </script>
</body>

</html>